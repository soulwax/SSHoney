<?xml version="1.0"?>
<!-- File: util/smf/sshoney.xml -->
<!DOCTYPE service_bundle SYSTEM "/usr/share/lib/xml/dtd/service_bundle.dtd.1">
       <!-- and run #svccfg import /var/svc/manifest/network/sshoney.xml -->
<service_bundle type='manifest' name='sshoney'>
        

<service
        name='network/sshoney'
        type='service'
        version='1'>

        <create_default_instance enabled='false' />

        <single_instance />

        <dependency name='fs-local'
                grouping='require_all'
                restart_on='none'
                type='service'>
                <service_fmri
                        value='svc:/system/filesystem/local' />
        </dependency>

        <dependency name='net-loopback'
                grouping='require_all'
                restart_on='none'
                type='service'>
                <service_fmri value='svc:/network/loopback' />
        </dependency>

        <dependency name='net-physical'
                grouping='require_all'
                restart_on='none'
                type='service'>
                <service_fmri value='svc:/network/physical' />
        </dependency>

        <dependency name='utmp'
                grouping='require_all'
                restart_on='none'
                type='service'>
                <service_fmri value='svc:/system/utmp' />
        </dependency>

        <dependency name='sshoney_config_data'
                grouping='require_all'
                restart_on='refresh'
                type='path'>
                <service_fmri value='file://localhost/usr/local/etc/sshoney.conf' />
        </dependency>

        <exec_method
                type='method'
                name='start'
                exec='/lib/svc/method/init.sshoney %m'
                timeout_seconds='60'/>

        <exec_method
                type='method'
                name='stop'
                exec=':kill'
                timeout_seconds='60' />

        <exec_method
                type='method'
                name='restart'
                exec='/lib/svc/method/init.sshoney %m'
                timeout_seconds='60' />

        <exec_method
                type='method'
                name='refresh'
                exec='/lib/svc/method/init.sshoney %m'
                timeout_seconds='60' />

        <property_group name='general' type='framework'>
                <!-- to start stop sshoney -->
                <propval name='action_authorization' type='astring'
                        value='solaris.smf.manage' />
        </property_group>

        <stability value='Unstable' />

        <template>
                <common_name>
                        <!-- Error: Attribute "xml:lang" must be declared 
                         for element type "loctext".xml(MSG_ATTRIBUTE_NOT_DECLARED) -->
                        <loctext> 
                        sshoney service
                        </loctext>
                </common_name>
        </template>

</service>

</service_bundle>